@model IEnumerable<Online_Shop.Application.Cart.GetCart.Response>
@{}

<div>
    <p class="title">Cart</p>
    @foreach(var product in Model)
    {
        <article class="media">
          <figure class="media-left">
            <p class="image is-128x128">
              <img src="~/images/placeholder.jpg">
            </p>
          </figure>
          <div class="media-content">
            <div class="content">
              <p class="title">@product.Name</p>
              <div class="level">
                  <div class="level-item">
                    <p class="subtitle">Quantity: @product.Quantity</p>
                  </div>
                  <div class="level-item">
                    <p class="subtitle">Size: @product.StockId</p>
                  </div>
                  <div class="level-item">
                    <p class="subtitle">Value: @product.Value</p>
                  </div>
              </div>
            </div>
          </div>
        </article>
    }
</div>